<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ViteTest</title>
    <link rel="stylesheet" href="~/ViteTest.styles.css" asp-append-version="true" />
    <link rel="stylesheet" vite-href="~/main.js" asp-append-version="true" />
</head>
<body class="bg-gray-50 text-gray-800">
    <header>
        <nav class="bg-white shadow border-b">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between h-16 items-center">
                    <div class="flex items-center">
                        <a class="text-xl font-semibold text-gray-900" asp-area="" asp-controller="Home" asp-action="Index">
                            ViteTest
                        </a>
                    </div>
                    <div class="flex space-x-4">
                        <a class="text-gray-700 hover:text-blue-600 font-medium" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        <a class="text-gray-700 hover:text-blue-600 font-medium" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-t text-center text-sm text-gray-500 py-4">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            &copy; 2025 - ViteTest -
            <a class="text-blue-600 hover:underline" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script type="module" vite-src="~/main.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
